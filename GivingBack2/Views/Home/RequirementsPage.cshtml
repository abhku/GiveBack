@model IEnumerable<GivingBack2.ViewModels.MappedRequirementViewModel>

@{
    ViewBag.Title = "RequirementsPage";
}

<div style="font-family:Segoe UI">
	<div class="help-block">
		<h3>You chose to help @ViewBag.SelectedCategoryName by donating @ViewBag.ResourceType <br /> </h3>
	</div>
	<div class="">
		<h2>Here are the organizations which we can find for you.</h2>
		<p>
			<div style="font-family:Segoe UI">
				@using (Html.BeginForm("Results", "Home", FormMethod.Post))
				{
					if (Model.FirstOrDefault().SelectedResource == GivingBack2.Models.ResourceTypes.Money)
					{									
						<table id="OrganizationTable" border="2">
							<thead>
								<tr>
									<th>OrganizationName</th>
									<th>Purpose of Program</th>
									<th>Amount Needs of Organization</th>
									<th>Contribute!!</th>
								</tr>
							</thead>
							<tbody>

								@foreach(var item in Model)
								{
									<tr>
										<td>@Html.Label(@item.OrganizationName) @Html.Hidden("Name", @item.OrganizationName + "Contribute")</td>
										<td>@Html.Label(@item.ProgramDescription)</td>
										<td>@Html.Label(@item.AmountNeedForOrg.ToString())</td>
										<td><input type="submit" value="Contribute" /></td>
									</tr>
								}
							</tbody>
							<!--Add footer for totals-->
						</table>
					}
					else if (Model.FirstOrDefault().SelectedResource == GivingBack2.Models.ResourceTypes.Product)
					{
						<table id="OrganizationTable" border="2">
							<thead>
								<tr>
									<th>OrganizationName</th>
									<th>Purpose of Program</th>
									<th>Name of the Product</th>
									<th>Quantity Required</th>
									<th>Contribute!!</th>
								</tr>
							</thead>
							<tbody>

								@foreach (var item in Model)
								{
									<tr>
										<td>@Html.Label(@item.OrganizationName) @Html.Hidden("Name", @item.OrganizationName + "Contribute")</td>
										<td>@Html.Label(@item.ProgramDescription)</td>
										<td>@Html.Label(@item.ProductName)</td>
										<td>@Html.Label(@item.AvailableQuantity.ToString() +" "+ @item.ProductUnit)</td>
										<td><input type="submit" value="Contribute" /></td>
									</tr>
								}
							</tbody>
							<!--Add footer for totals-->
						</table>
					}
				}
		</p>

	</div>
</div>

