@model GivingBack2.ViewModels.HomeIndexViewModel

@{
    ViewBag.Title = "Home Page";
}
<div>
	<div style="font-family:Segoe UI">
		@using (Html.BeginForm("ChooseCategory", "Home", FormMethod.Post))
		{
			<div class="jumbotron">
				<h1 class="animated jackInTheBox">Giving Back</h1>
				<p class="animated bounce">Do you often feel that you should do something for society but get lost with unavailability of options, lack of clarity or a right platform?</p>
				@*<p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
			</div>
			<div class="row">
				<div class="col-md-4">
					<h2>Who do you want to help?</h2>
					<p>
						@foreach (var item in GivingBack2.ViewModels.HomeIndexViewModel.CategoryList)
						{
							<div class="form-group">
								<div class="radio">
									@Html.RadioButtonFor(m => m.SelectedCategoryId, @item.CategoryId)
									@Html.Label(@item.CategoryDisplayName)
								</div>
							</div>
						}
					</p>
				</div>
			</div>
			<input type="submit" value="Submit" />
		}
	</div>
</div>