@model GivingBack2.ViewModels.HomeIndexViewModel

@{
    ViewBag.Title = "Home Page";
}
<div>
	<div style="font-family:Segoe UI">
		@using (Html.BeginForm("ChooseCategory", "Home", FormMethod.Post))
		{
			<div class="jumbotron">
				<h1 class="animated jackInTheBox">Giving Back</h1>
				<p class="animated bounce">Do you often feel that you should do something for society but get lost with unavailability of options, lack of clarity or a right platform?</p>
				@*<p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
			</div>
			<div class="row">
				<div class="col-md-4">
					<h2>Getting started</h2>
					<p>
						<div class="form-group">
								<div class="radio">
									@Html.RadioButtonFor(m => m.SelectedResource, 0)
									@Html.LabelFor(m => m.MoneyResourceType)
								</div>
						</div>

						<div class="form-group">
							<div class="radio">
									@Html.RadioButtonFor(m => m.SelectedResource, 1)
									@Html.LabelFor(m => m.TimeResourceType)
							</div>
						</div>

						<div class="form-group">
								<div class="radio">
									@Html.RadioButtonFor(m => m.SelectedResource, 2)
									@Html.LabelFor(m => m.ProductResourceType)
								</div>
						</div>
					</p>
				</div>
			</div>
			<input type="submit" value="Submit" />
		}
	</div>
</div>